<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Base application theme. -->
    <style name="ActivityTheme.Primary.Base.Light" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="background">@color/white</item>
        <item name="colorError">@color/white</item>
        <item name="textColorSearchUrl">#60E0E6F1</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="Dialog_Fullscreen">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="MainTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="NoStatusBarTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextInputLayoutDesign">
        <item name="colorControlActivated">@color/primarytext</item>
        <item name="colorControlHighlight">@color/divider</item>
        <item name="android:textColor">@color/primarytext</item>
        <item name="android:textColorHint">@color/secondarytext</item>
        <item name="android:textColorHighlight">@color/divider</item>
        <item name="android:textColorLink">@color/divider</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="TextInputHintLabel" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="colorControlActivated">@color/primarytext</item>
        <item name="colorControlHighlight">@color/divider</item>
        <item name="android:textColor">@color/primarytext</item>
        <item name="android:textColorHint">@color/secondarytext</item>
        <item name="android:textColorHighlight">@color/divider</item>
        <item name="android:textColorLink">@color/divider</item>
    </style>

    <style name="NavigationDrawerTextStyle">
        <item name="android:typeface">monospace</item>
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

    <style name="NavigationView" parent="Base.Theme.AppCompat">
        <item name="android:listDivider">@color/divider</item>
        <item name="android:dividerHeight">0.4dp</item>
    </style>

    <style name="tab_text" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:typeface">monospace</item>
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

